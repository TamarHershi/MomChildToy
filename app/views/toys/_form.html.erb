<%= form_for @toy do |f| %>
  <%= f.label :kind %>:
  <%= f.text_field :kind, :require => true %>
	<br>
  <%= f.label :color %>:
  <%= f.text_field :color, :require => true %>
  <br>
  <% if @toy.kind.nil? %>
    <%= f.hidden_field :child_id, value: @child.id %>
  <% end %>


  <%= @toy.persisted? ? (f.submit value: "update toy", id: 'special-button') : (f.submit value: "add toy", id: 'special-button') %>
<% end %>
